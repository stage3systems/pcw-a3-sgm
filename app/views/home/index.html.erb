<div class="container-fluid">
  <h2 class="title">Dashboard</h2>
  <div class="well">
    <h3>Last 10 published Proforma Disbursments</h3>
    <% if @published.each do |p| %>
      <%= link_to p.title, published_url(id: p.publication_id) %> published on <%= l p.updated_at %><br />
    <% end.empty? %>
      No published disbursments available.
    <% end %>
  </div>
  <div class="well">
    <h3>Last 10 draft Proforma Disbursments</h3>
    <% if @drafts.each do |d| %>
      <%= link_to d.title, edit_disbursment_url(d) %> last updated on <%= l d.updated_at %><br />
    <% end.empty? %>
      No draft disbursments available.
    <% end %>
  </div>
</div>
