<div class="container-fluid">
  <h1>Proforma Disbursments</h1>

  <div class="btn-group"></div>

  <table class="table table-bordered datatable">
    <thead>
      <tr>
        <th>Reference</th>
        <th>Status</th>
        <th>ETA</th>
        <th>Port</th>
        <th>Company</th>
        <th>Vessel</th>
        <th>Amount</th>
        <th>Last Modified</th>
        <th>Revision</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @disbursments.each do |disbursment| %>
      <tr>
        <td><%= disbursment.current_revision.reference %></td>
        <td>
          <% if disbursment.draft? %>
          Draft
          <% else %>
          <%= link_to 'Published', published_url(:id => disbursment.publication_id) %>
          <% end %>
        </td>
        <td><%= l(disbursment.current_revision.eta) rescue "N/A" %></td>
        <td><%= disbursment.port.name %></td>
        <td><%= disbursment.company.name %></td>
        <td><%= disbursment.vessel_name %></td>
        <td><%= number_to_currency disbursment.current_revision.amount %></td>
        <td><%= l disbursment.current_revision.updated_at %></td>
        <td><%= disbursment.current_revision.number %></td>
        <td>
          <div class="btn-group">
            <% if disbursment.draft? %>
            <%= link_to 'Publish', publish_disbursment_path(disbursment), :class => 'btn btn-info btn-small' %>
            <% else %>
            <%= link_to 'Unpublish', unpublish_disbursment_path(disbursment), :class => 'btn btn-info btn-small' %>
            <% end %>
            <%= link_to 'Revise', edit_disbursment_path(disbursment), :class => 'btn btn-small' %>
            <%= link_to 'Delete', disbursment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %>
          </div>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="clearfix"></div>

  <%= link_to 'New PFDA', new_disbursment_path, :class => 'btn btn-primary' %>
</div>
