<div class="container">
  <% if @published  %>
    <% if @published.published? %>
    <div class="row">
      <div class="btn-group"></div>
      <div class="span12 well well-small">
        <h4>Proforma Disbursment for <%= @published.vessel_name %> in <%= @published.port.name %>: <%= number_to_currency @revision.amount %> (<%= @revision.data["currency_code"] %>)</h4>
        <p><small><%= @revision.reference %> | Revision <%= @revision.number %> | Last revised on <%= l @revision.updated_at %></small></p>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <p style="padding-left: 1em;">
          <strong>GRT:</strong> <%= @revision.data["vessel_grt"] %><br />
          <strong>NRT:</strong> <%= @revision.data["vessel_nrt"] %><br />
          <strong>DWT:</strong> <%= @revision.data["vessel_dwt"] %><br />
          <strong>LOA:</strong> <%= @revision.data["vessel_loa"] %><br />
        </p>
      </div>
      <div class="span4">
        <p style="padding-left: 1em;">
          <strong>Cargo Type:</strong> <%= @revision.cargo_type.display rescue "N/A" %><br />
          <strong>Cargo Qantity:</strong> <%= @revision.cargo_qty %><br />
          <strong>Load Time:</strong> <%= @revision.loadtime %><br />
          <strong>Days Alongside:</strong> <%= @revision.days_alongside %><br />
        </p>
      </div>
      <div class="span4">
        <p style="padding-left: 1em;">
          <strong>Tugs In:</strong> <%= @revision.tugs_in %><br />
          <strong>Tugs Out:</strong> <%= @revision.tugs_out %><br />
        </p>
      </div>
    </div>
    <div class="row">
      <div class="span12 well well-small">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Item</th>
              <th>Amount (<%= @revision.data["currency_code"] %>)</th>
              <% unless @revision.tax_exempt? %>
              <th>Amount (<%= @revision.data["currency_code"] %>) Including Taxes</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @revision.field_keys.each do |f| %>
              <tr>
                <td><%= @revision.descriptions[f] %></td>
                <td><%= number_to_currency @revision.values[f] %></td>
                <% unless @revision.tax_exempt? %>
                <td><%= number_to_currency @revision.values_with_tax[f] %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th>Total</th>
              <th><%= number_to_currency @revision.data["total"] %></th>
              <% unless @revision.tax_exempt? %>
              <th><%= number_to_currency @revision.data["total_with_tax"] %></th>
              <% end %>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  <% else %>
    <div class="btn-group"></div>
    <div class="well"><h3>The requested document is no more publicly accessible.</h3></div>
  <% end %>
<% else %>
    <div class="btn-group"></div>
    <div class="well"><h3>The requested document cannot be found.</h3></div>
<% end %>
</div>
