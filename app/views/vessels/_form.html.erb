<%= simple_form_for(@vessel, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :loa %>
    <%= f.input :grt %>
    <%= f.input :nrt %>
    <%= f.input :dwt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
