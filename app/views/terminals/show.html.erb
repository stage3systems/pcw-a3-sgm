<% content_for :navbar_buttons do %>
  <%= link_to 'Edit', edit_port_terminal_path(@port, @terminal), class: "btn btn-primary btn-sm" %>
  <%= link_to 'Back', port_terminals_path(@port), class: "btn btn-default btn-sm" %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <h2 class="title"><%= @port.name %> / <%= @terminal.name %></h2>
    <p>This terminal has <%= link_to pluralize(@terminal.services.count, 'service'), port_terminal_services_url(@port, @terminal) %> defined.</p>
    <p>This terminal has <%= link_to pluralize(@terminal.tariffs.count, 'document'), port_terminal_tariffs_url(@port, @terminal) %> associated.</p>
  </div>
</div>
