<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h2 class="title"><%= @port.name %> / <%= @terminal.name %></h2>
  <p>This terminal has <%= link_to pluralize(@terminal.services.count, 'service'), port_terminal_services_url(@port, @terminal) %> defined.</p>
  <p>This terminal has <%= link_to pluralize(@terminal.tariffs.count, 'tariff'), port_terminal_tariffs_url(@port, @terminal) %> associated.</p>

  <div class="btn-group">
    <%= link_to 'Edit', edit_port_terminal_path(@port, @terminal), :class => "btn btn-small" %>
    <%= link_to 'Back', port_terminals_path(@port), :class => "btn btn-small" %>
  </div>
</div>
