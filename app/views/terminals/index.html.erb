<div class="container-fluid">
  <h2 class="title">
    Terminals for <%= @port.name %>
    <%= link_to 'New Terminal', new_port_terminal_path, :class => 'btn btn-primary' %>
  </h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Tariffs</th>
        <th>Services</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @terminals.each do |terminal| %>
      <tr>
        <td><%= link_to terminal.name, port_terminal_path(@port, terminal) %></td>
        <td class="right-align"><%= link_to terminal.tariffs.count.to_s, port_terminal_tariffs_path(@port, terminal)  %></td>
        <td class="right-align"><%= link_to terminal.services.count.to_s, port_terminal_services_path(@port, terminal)  %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Edit Services', port_terminal_services_path(@port, terminal), class: 'btn btn-small'  %>
            <%= link_to 'Edit', edit_port_terminal_path(@port, terminal), class: 'btn btn-small' %>
            <%= link_to 'Delete', port_terminal_path(@port, terminal), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-small' %>
          </div>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render "common/data_table", column_defs: [
      {"sType" => "num-html", "aTargets" => [1,2]},
      {"bSortable" => false, "aTargets" => [3]}
    ] %>
