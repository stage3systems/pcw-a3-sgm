<div class="container-fluid">
  <h1>Terminals for <%= @port.name %></h1>

  <div class="btn-group"></div>

  <table class="table table-bordered datatable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Tariffs</th>
        <th>Services</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @terminals.each do |terminal| %>
      <tr>
        <td><%= link_to terminal.name, port_terminal_path(@port, terminal) %></td>
        <td><%= link_to terminal.tariffs.count.to_s, port_terminal_tariffs_path(@port, terminal)  %></td>
        <td><%= link_to terminal.services.count.to_s, port_terminal_services_path(@port, terminal)  %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Edit Services', port_terminal_services_path(@port, terminal), class: 'btn btn-small'  %>
            <%= link_to 'Edit', edit_port_terminal_path(@port, terminal), class: 'btn btn-small' %>
            <%= link_to 'Delete', port_terminal_path(@port, terminal), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-small' %>
          </div>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="clearfix"></div>

  <%= link_to 'New Terminal', new_port_terminal_path, :class => 'btn btn-primary' %>
</div>
