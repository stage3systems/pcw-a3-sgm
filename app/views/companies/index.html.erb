<div class="container-fluid">
  <h1>Companies</h1>

  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>

  <% @companies.each do |company| %>
    <tr>
      <td><%= link_to company.name, company %></td>
      <td><%= company.email %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'Show', company, :class => 'btn btn-info btn-small' %>
          <%= link_to 'Edit', edit_company_path(company), :class => 'btn btn-small' %>
          <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %>
        </div>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Company', new_company_path, :class => 'btn btn-primary' %>
</div>
