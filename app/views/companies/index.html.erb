<div class="container-fluid">
  <h2 class="title">
    Companies
    <%= link_to 'New Company', new_company_path,
                :class => 'btn btn-primary btn-small' %>
  </h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.email %></td>
        <td>
          <div class="btn-group">
            <%= link_to icon('eye-open'), company,
                        :class => 'btn btn-info btn-small',
                        :title => 'View' %>
            <%= link_to icon('pencil'), edit_company_path(company),
                        :class => 'btn btn-small',
                        :title => 'Edit' %>
            <% if @can_delete[company.id] %>
            <%= link_to icon('trash'), company, method: :delete,
                        data: { confirm: 'Are you sure?' },
                        :class => 'btn btn-danger btn-small',
                        :title => 'Delete' %>
            <% else %>
            <%= link_to icon('trash'), "#",
                        :class => 'btn btn-danger btn-small disabled',
                        :title => 'Company in use, cannot be deleted' %>
            <% end %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render "common/data_table",
           column_defs: [{"bSortable" => false, "aTargets" => [2]}] %>
