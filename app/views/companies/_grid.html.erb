<%= grid(@companies_grid) do |g|
  g.column name: 'Name', attribute: 'name', model: 'Company' do |c|
    link_to c.name, company_path(c)
  end
  g.column name: 'Email', attribute: 'email', model: 'Company' do |c|
    link_to c.email, "mailto:#{c.email}" if c.email
  end
  g.column do |c|
    render partial: 'actions', locals: {company: c}
  end
end %>
