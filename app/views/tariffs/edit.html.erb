<div class="container-fluid">
  <h1>Editing Tariff for <%= @port.name %><%= " / #{@terminal.name}" if @terminal %></h1>

  <%= render 'form' %>

  <div class="btn-group">
    <% if @terminal %>
      <%= link_to 'Show', port_terminal_tariff_path(@port, @terminal, @tariff), :class => "btn btn-small" %>
      <%= link_to 'Back', port_terminal_tariffs_path(@port, @terminal), :class => "btn btn-small" %>
    <% else %>
      <%= link_to 'Show', port_tariff_path(@port, @tariff), :class => "btn btn-small" %>
      <%= link_to 'Back', port_tariffs_path(@port), :class => "btn btn-small" %>
    <% end %>
  </div>
</div>
