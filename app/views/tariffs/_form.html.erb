<%= simple_form_for(@terminal.nil? ? [@port, @tariff] : [@port, @terminal, @tariff]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :document %>
    <%= f.input :validity_start, label: 'Valid From' %>
    <%= f.input :validity_end, label: 'Valid Until' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
