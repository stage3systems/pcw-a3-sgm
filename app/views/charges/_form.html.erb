<%= simple_form_for([@port, @charge], html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :key %>
    <%= f.input :code, :as => :ace, ace: { ace_mode: 'javascript', ace_theme: 'clouds', ace_height: '200' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
